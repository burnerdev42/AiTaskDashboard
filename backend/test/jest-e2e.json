{
    "moduleFileExtensions": [
        "js",
        "json",
        "ts"
    ],
    "rootDir": ".",
    "testEnvironment": "node",
    "testRegex": ".e2e-spec.ts$",
    "transform": {
        "^.+\\.(t|j)s$": "ts-jest"
    },
    "moduleNameMapper": {
        "^@app/common(|/.*)$": "<rootDir>/../src/common/$1",
        "^@app/database(|/.*)$": "<rootDir>/../src/database/$1"
    },
    "testTimeout": 30000,
    "setupFilesAfterEnv": ["<rootDir>/jest-e2e-setup.ts"]
}